{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Ballot",
  "description": "ClearElection Ballot definition, v0.0",
  "type": "object",
  "properties": {
    "version": { "enum": ["0.0"] },
    "contests": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "ballotId": { "type": "string" },
          "contestId": { "type": "string" },
          "uniquifier": { "type": "string" },
          "choices": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "candidateId": { "type": "string" }
              },
              "required": ["candidateId"]
            }
          }
        },
        "required": ["ballotId", "contestId", "uniquifier", "choices"]
      }
    }
  },
  "required": ["version", "contests"]
}
